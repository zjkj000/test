<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:orientation="horizontal"
android:padding="5dp"
android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/package_type"/>

    <TextView
        android:id="@+id/package_name"
        android:textColor="#D6A7B7"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/package_type"
        android:layout_toLeftOf="@+id/package_datetime"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"></TextView>

    <TextView
        android:id="@+id/package_datetime"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/packagezairu"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"></TextView>

    <TextView
        android:id="@+id/packagezairu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="载入"
        android:textColor="#0cBA73"></TextView>

</RelativeLayout>