<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_select_menu"
    tools:context=".setBoardFragment.Set_geometry_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="7sp"
            android:textColor="@color/gray_text"
            android:text="粗细 "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:background="@drawable/bgset_select"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/setgeometrysize1"
                    android:padding="1dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:id="@+id/geometrysize1"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/paintsize01"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/setgeometrysize2"
                    android:padding="0.5dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:id="@+id/geometrysize2"
                        android:layout_height="wrap_content"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/paintsize02"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/setgeometrysize3"
                    android:padding="0.5dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/geometrysize3"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/paintsize03"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/setgeometrysize4"
                    android:padding="0.5dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/geometrysize4"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/paintsize04"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/setgeometrysize5"
                    android:padding="0.5dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/geometrysize5"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/paintsize05"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/setgeometrysize6"
                    android:padding="0.5dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:id="@+id/geometrysize6"
                        android:background="@color/bg_select_shadow"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/paintsize06"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:textColor="@color/gray_text"
            android:text="颜色 "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:background="@drawable/bgset_select"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgset_select"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/setgeometrygray"
                    android:padding="0.5dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/geometrygray"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/text_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/setgeometryblack"
                    android:padding="0.5dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/geometryblack"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/setgeometryblue"
                    android:padding="0.5dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/geometryblue"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/text_blue"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/setgeometrygreen"
                    android:padding="0.5dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/geometrygreen"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/text_green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/setgeometryyellow"
                    android:padding="0.5dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/geometryyellow"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/text_yellow"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/setgeometryred"
                    android:padding="0.5dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/geometryred"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/text_red"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>