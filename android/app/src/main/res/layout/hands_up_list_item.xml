<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text_doc_user"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="start"
        android:background="@color/popupWindow_container"
        >
        <ImageView
            android:id="@+id/hand_up_list_user_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/user_type_pc"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/hand_up_list_user_name"
            app:layout_constraintStart_toEndOf="@+id/hand_up_list_user_type"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingVertical="5dp"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="ming6001"
            android:textColor="@color/popupWindow_text_gray"
            android:background="@color/popupWindow_container"
            android:textSize="11sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hands_up_speaker_controller_container"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="start"
        android:background="@color/popupWindow_container"
        >
        <ImageView
            android:id="@+id/hands_up_speaker_controller"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/speaker_controller_off"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
