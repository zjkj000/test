<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_analysis"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:padding="2dp"
    android:background="@color/purple_500">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#d3d7d4">
        <!-- 页面左侧-->
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--分割线-->
            <!--            <View-->
            <!--                android:visibility="invisible"-->
            <!--                android:id="@+id/view_daan"-->
            <!--                android:layout_marginLeft="5dp"-->
            <!--                android:layout_width="1dp"-->
            <!--                android:layout_height="25dp"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:background="#d3d7d4" />-->

            <!--答题率-->
            <LinearLayout
                android:id="@+id/linear_dati"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/tx_dati1"
                    android:text="答题率: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ed1941"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:id="@+id/tx_dati2"
                    android:text="95%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ed1941" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tx_huizong"
                    android:text="汇总数据"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#FFFFFF"
                    android:background="#007947"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#007947"
                    />

                <ListView
                    android:id="@+id/lvClass"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

        <!--中间分割区-->
        <View
            android:id="@+id/view"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#d3d7d4"
            />

        <!-- 页面右侧-->
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:layout_weight="3"
            android:orientation="vertical">

            <!--答案内容   图片以及文字-->
            <ScrollView
                android:visibility="gone"
                android:id="@+id/slStusAnswersImg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:id="@+id/linearStusAnswersImg"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:orientation="vertical">
                </LinearLayout>

            </ScrollView>

            <TextView
                android:id="@+id/tx_noanswer"
                android:text="没有人提交答案。"
                android:textColor="@color/text_black"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!--答题详情 -->
            <ScrollView
                android:visibility="gone"
                android:id="@+id/slStusAnswers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:id="@+id/linearStusAnswers"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:orientation="vertical">
                </LinearLayout>
            </ScrollView>

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_area"
                android:text="柱状图"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#E5E5E5"/>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#007947"
                />
            <View
                android:id="@+id/view1"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:background="#007947"
                />

            <View
                android:visibility="gone"
                android:id="@+id/view2"
                android:layout_marginLeft="110dp"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:background="#007947"
                />

            <!--右侧底部工具栏-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txdaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="答案内容"
                    android:textColor="#007947" />

                <TextView
                    android:id="@+id/txdati"
                    android:text="答题详情"
                    android:textColor="#FF000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp"
                    android:gravity="right|center_vertical">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/imgPush"
                        android:src="@mipmap/q_gbda"
                        android:scaleType="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="115dp"/>

                    <ImageView
                        android:id="@+id/imgFlash"
                        android:src="@mipmap/q_flush"
                        android:scaleType="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>

                    <ImageView
                        android:id="@+id/imgExit"
                        android:src="@mipmap/q_exit"
                        android:scaleType="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear_imgAndtxt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#d3d7d4">

        <!--显示学生答案-图片-->
        <LinearLayout
            android:id="@+id/linear_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_txt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="#636b79">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tx_who"
                    android:text="苏思坚"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:text="的作答"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:src="@mipmap/page_left"
                    android:layout_gravity="center_vertical"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />

                <TextView
                    android:id="@+id/tx_num"
                    android:text="1/9"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#130c0e"
                    android:layout_marginLeft="5dp"/>

                <ImageView
                    android:id="@+id/img_next"
                    android:src="@mipmap/page_right"
                    android:layout_gravity="center_vertical"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/tx_close"
                    android:text="关闭"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#130c0e"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>