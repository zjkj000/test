<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".setBoardFragment.Set_text_Fragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_select_menu"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/gray_text"
        android:textSize="7sp"
        android:layout_marginTop="5dp"
        android:text="字号" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bgset_select"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:id="@+id/setText_textsize"
                android:textColor="@color/gray_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="6dp"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:textColor="@color/gray_text"
                    android:text="小"/>
                <SeekBar
                    android:id="@+id/selectTextSize"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginRight="-10dp"
                    android:layout_weight="1"
                    android:max="6"
                    android:min="1"
                    android:progress="3"></SeekBar>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="6sp"
                    android:textColor="@color/gray_text"
                    android:layout_marginRight="8dp"
                    android:text="大"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text"
        android:textSize="7sp"
        android:text="颜色 "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:background="@drawable/bgset_select"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bgset_select"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/settextgray"
                    android:padding="1dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textgray"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/text_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/settextblack"
                    android:padding="1dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textblack"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/text_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/settextblue"
                    android:padding="1dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textblue"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/text_blue"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/settextgreen"
                    android:padding="1dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textgreen"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/text_green"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/settextyellow"
                    android:padding="1dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textyellow"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/text_yellow"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:id="@+id/settextred"
                    android:padding="1dp">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textred"
                        android:background="@color/bg_select_shadow"
                        android:src="@mipmap/text_red"/>
                </LinearLayout>

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</FrameLayout>