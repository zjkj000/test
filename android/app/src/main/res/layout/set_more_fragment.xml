<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".setBoardFragment.Set_more_Fragment">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_select_menu"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Switch
            android:theme="@style/MySwitch"
            android:layout_width="wrap_content"
            android:id="@+id/sw01"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginRight="-10dp"
            android:checked="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:textColor="@color/gray_text"
            android:text="开启笔锋"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Switch
            android:theme="@style/MySwitch"
            android:layout_width="wrap_content"
            android:layout_marginRight="-10dp"
            android:id="@+id/sw02"
            android:checked="true"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:textColor="@color/gray_text"
            android:text="显示远端画笔"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Switch
            android:theme="@style/MySwitch"
            android:layout_width="wrap_content"
            android:id="@+id/sw03"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginRight="-10dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:textColor="@color/gray_text"
            android:text="开启多点触控(只有触摸屏才有效)"/>
    </LinearLayout>
</LinearLayout>


</FrameLayout>